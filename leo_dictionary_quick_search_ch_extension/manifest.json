{
  "manifest_version": 3,
  "name": "LEO Dictionary Quick Search",
  "version": "1.0",
  "description": "Click text and press Shift to search on LEO dictionary.",
  "permissions": ["tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "LEO Quick Search"
  }
}
